[
  {
    "namespace": "requirements",
    "description": "Stub namepsace for the 'requirements' manifest key.",
    "compiler_options": {
      "generate_error_messages": true
    },
    "types": [
      {
        "id": "3DFeature",
        "type": "string",
        "enum": ["webgl", "css3d"]
      }
    ],
    "manifest_keys": {
      "requirements": {
        "type": "object",
        "optional": true,
        "properties": {
          "plugins": {
            "type": "object",
            "optional": true,
            "deprecated": true,
            "properties": {
              "npapi": {
                "type": "boolean",
                "optional": true
              }
            }
          },
          "3D": {
            "type": "object",
            "optional": true,
            "properties": {
              "features": {
                "type": "array",
                "items": { "$ref": "3DFeature" }
              }
            }
          },
          "window": {
            "type": "object",
            "optional": true,
            "properties": {
              "shape": {
                "type": "boolean",
                "optional": true
              }
            }
          }
        }
      }
    }
  }
]
